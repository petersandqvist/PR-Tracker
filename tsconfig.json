{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
